@using TravelProject.Models.Classes
@model List<Blog>



<div class="padding">
    <h4>Top 5 Blog</h4>
    <ul class="list list-pad">

        @{ int i = 0;}

        @foreach (var item in Model)
        {

            <li class="list-bg"><span>@{i++;} @i.</span><a href="/Blog/BlogDetail/@item.BlogID">@item.BlogTitle</a></li>
            <br />
        }

    </ul>
    <a href="/Blog/BlogIndex" class="link1">See all blogs</a>
</div>
