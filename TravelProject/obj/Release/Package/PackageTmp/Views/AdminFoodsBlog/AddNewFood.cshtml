@model TravelProject.Models.Classes.TraditionalFoodsBlog
@{
    ViewBag.Title = "AddNewFood";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h3>Add New Food Page</h3>
<br />


@using (Html.BeginForm("AddNewFood", "AdminFoodsBlog", FormMethod.Post))
{
    <div>

        @Html.LabelFor(a => a.TraditionalFoodName)
        @Html.TextBoxFor(a => a.TraditionalFoodName, new { @class = "form-control" })
        <br />

        @Html.LabelFor(a => a.TraditionalFoodCountry)
        @Html.TextBoxFor(a => a.TraditionalFoodCountry, new { @class = "form-control" })
        <br />

        @Html.LabelFor(a => a.TraditionalFoodRating)
        @Html.TextBoxFor(a => a.TraditionalFoodRating, new { @class = "form-control" })
        <br />

        @Html.LabelFor(a => a.TraditionalFoodDescription)
        @Html.TextAreaFor(a => a.TraditionalFoodDescription, new { @class = "form-control" })
        <br />

        @Html.LabelFor(a => a.TraditionalFoodImageUrl)
        @Html.TextBoxFor(a => a.TraditionalFoodImageUrl, new { @class = "form-control" })
        <br />


    </div>

    <button class="btn btn-outline-primary btn-sm">Add This Food!</button>
}

