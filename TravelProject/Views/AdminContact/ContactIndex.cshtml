@using TravelProject.Models.Classes
@model List<Contact>
@{
    ViewBag.Title = "ContactIndex";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h3>Contact List Page</h3>


<table class="table table-bordered table-hover">

    <thead>
        <tr>

            <th>Contact ID</th>
            <th>Contact Name</th>
            <th>Contact Mail</th>
            <th>Contact Phone</th>
            <th>Contact Message</th>
            <th>Operations</th>

        </tr>
    </thead>

    <tbody>

        @foreach (var item in Model)
        {
            <tr>
                <td><b>@item.ContactID</b></td>
                <td>@item.ContactName</td>
                <td><a href="mailto:@item.ContactEmail" style="color:midnightblue">@item.ContactEmail</a></td>
                <td><a href="tel:@item.ContactPhone" style="color:midnightblue">+@item.ContactPhone</a></td>
                <td>@item.ContactMessage</td>
                <td align="center">

                    <a href="/AdminContact/DeleteContact/@item.ContactID" class="btn btn-outline-danger btn-sm">Delete</a>
                </td>
            </tr>
        }

    </tbody>

</table>