@using TravelProject.Models.Classes
@model List<Blog>


<div class="con-bot" style="display:flex">

    @foreach (var item in Model)
    {
        <div class="left">
            <div class="bot-left">
                <img src="@item.BlogImageUrl" alt="@item.BlogTitle" />
            </div>
            <div class="left-text">

                <h4>@item.BlogTitle</h4>
                <h6>@item.BlogDate.ToString("dd.MM.yyyy")</h6>

                <p>@item.BlogDescription.Substring(0,80)...</p>

                <p><a href="/Blog/BlogDetail/@item.BlogID"><span class="read">Read More >></span></a></p>
            </div>
        </div>
    }
   

    <div class="clear"></div>
</div>


